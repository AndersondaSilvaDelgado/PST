<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.usinasantafe.pst">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".PSTContext"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".TopicoActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".SenhaActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".QuestaoActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".ObservadorLeitorActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".ObservadorDigActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".ObservadorActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".ListaTurnoActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".ListaSubAreaActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".ListaAreaActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".DetalhesActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".ConfiguracaoActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".ComentarioActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".CameraActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".MenuInicialActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver android:name=".ReceberAlarme">
            <intent-filter>
                <action android:name="EXECUTAR_ALARME" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>
    </application>
</manifest>